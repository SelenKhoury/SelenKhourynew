<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/ID"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/TextViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="My Profile"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/profile"
                android:layout_marginStart="50dp"
                android:hint="Loading"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/username"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_name"/>

            <ImageView
                android:id="@+id/email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_email_24" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_name"
                android:layout_alignStart="@id/email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Loading"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/Email"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_email"/>

            <ImageView
                android:id="@+id/icamera"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_photo_camera_24" />

            <TextView
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_email"
                android:layout_alignStart="@id/icamera"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Change Profile Pic"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_cam"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/Email"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>